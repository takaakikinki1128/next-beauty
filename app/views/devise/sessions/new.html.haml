.log-in
  %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :メールアドレス,class:"login-label"
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"6文字以上",class:"login-text"
    .field
      = f.label :パスワード,class:"login-label"
      %br/
      = f.password_field :password, autocomplete: "current-password",placeholder:"6文字以上",class:"login-text"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :確認,class:"login-label"
    .actions-login
      = f.submit "完了",class:"login-btn"
