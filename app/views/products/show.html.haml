.show-product-contents
  .show-tweet-name
    %i.far.fa-user.show-user-icon
      = link_to @product.user.nickname,"/users/#{@product.user.id}",class:"tweet-user_name"
    - if user_signed_in? && current_user.id == @product.user_id
      %i.far.fa-edit.show-edit-icon
        = link_to '編集', "/products/#{@product.id}/edit", method: :get,class:"tweet_show-edit"
      %i.far.fa-trash-alt.show-delete-icon
        = link_to '削除', "/products/#{@product.id}", method: :delete,class:"tweet_show-delete"

  .show-tweet-text
    %i.fas.fa-walking.tweet-text-icon
    紹介文
    .lll
      = @product.text
      
  .video-img
    = video_tag @product.video_url.to_s,loop: true, controls: true, width: 500, id: "mv" if @product.video.present?
  .img-type
    = image_tag @product.image.url,loop: true, controls: true, width: 500, id: "img" if @product.image.present?


    